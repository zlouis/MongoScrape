<div class="row"> 
  <h3 class="card">{{article.title}}</h3>
  <h5 class="card-panel">{{body}}</h5>
  
</div>

<div class="row">
   <form action="/comment/{{article._id}}" method="POST" class="col s12 card-panel">
      <div class="row">
        <div class="input-field">
          <i class="material-icons prefix">News!</i>
          <input id="icon_prefix" type="text" name="name" class="validate">
          <label for="icon_prefix">Name</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">comment</i>
          <input id="icon_telephone" type="text" name="comment" class="validate">
          <label for="icon_telephone">Comment</label>
        </div>
      </div>
       <!-- Submit Button -->
      <div class="row">
        <div class="input-field">
        <center><input class="btn add-comment-button" type="submit" value="Submit"></center>
        </div>
      </div>
    </form>
</div

{{!-- comments go here --}}
<div class="row">
  {{#each article.comment}}
    <div class="card-panel">
      <h5>{{name}}</h5>
      <p>{{comment}}<p>
    </div
  {{/each}}
</div>